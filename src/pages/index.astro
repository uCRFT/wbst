---
import Layout from '../layouts/Layout.astro';

const featuredPosts = [
  {
    title: 'Sustainable Mining Practices',
    excerpt: 'Exploring innovative approaches to responsible mineral extraction...',
    image: '/images/mining.jpg',
    url: '/blog/sustainable-mining-practices'
  },
  {
    title: 'Water Resource Management',
    excerpt: 'Effective strategies for managing water resources in supply chains...',
    image: '/images/water.jpg',
    url: '/blog/water-resource-management'
  },
  {
    title: 'Renewable Energy in Supply Chains',
    excerpt: 'Integrating renewable energy solutions in natural resource operations...',
    image: '/images/renewable.jpg',
    url: '/blog/renewable-energy-supply-chains'
  }
];
---

<Layout title="Home">
  <div class="relative bg-primary-900 dark:bg-primary-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 text-center">
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
        Sustainable Supply Chain Insights
      </h1>
      <p class="text-xl text-primary-100 max-w-3xl mx-auto">
        Exploring the intersection of natural resources, sustainability, and modern supply chain management.
      </p>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Featured Articles</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {featuredPosts.map(post => (
        <a href={post.url} class="group">
          <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg">
            <img 
              src={post.image} 
              alt={post.title}
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400">
                {post.title}
              </h3>
              <p class="mt-2 text-gray-600 dark:text-gray-400">
                {post.excerpt}
              </p>
            </div>
          </div>
        </a>
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <a 
        href="/blog" 
        class="inline-block bg-primary-600 hover:bg-primary-700 text-white font-semibold px-6 py-3 rounded-lg"
      >
        View All Articles
      </a>
    </div>
  </div>
</Layout>