---
import Layout from '../layouts/Layout.astro';

const featuredPosts = [
  {
    title: 'Sustainable Mining Practices',
    excerpt: 'Exploring innovative approaches to responsible mineral extraction...',
    image: '/images/mining.jpg',
    url: '/blog/sustainable-mining-practices'
  },
  {
    title: 'Water Resource Management',
    excerpt: 'Effective strategies for managing water resources in supply chains...',
    image: '/images/water.jpg',
    url: '/blog/water-resource-management'
  },
  {
    title: 'Renewable Energy in Supply Chains',
    excerpt: 'Integrating renewable energy solutions in natural resource operations...',
    image: '/images/renewable.jpg',
    url: '/blog/renewable-energy-supply-chains'
  }
];
---

<Layout title="Home">
  <div class="relative bg-gradient-to-br from-primary-800 to-primary-900 dark:from-primary-900 dark:to-primary-950 overflow-hidden">
    <div class="absolute inset-0 bg-grid-white/[0.05] -z-1"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 text-center relative">
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 animate-fade-in">
        Sustainable Supply Chain Insights
      </h1>
      <p class="text-xl text-primary-100 max-w-3xl mx-auto animate-fade-in" style="animation-delay: 0.2s">
        Exploring the intersection of natural resources, sustainability, and modern supply chain management.
      </p>
      <div class="mt-8 animate-fade-in" style="animation-delay: 0.4s">
        <a 
          href="/blog" 
          class="inline-block bg-white/10 hover:bg-white/20 text-white font-semibold px-8 py-4 rounded-lg backdrop-blur-sm transition-all duration-300 border border-white/20"
        >
          Explore Our Insights
        </a>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 animate-slide-in">Featured Articles</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {featuredPosts.map((post, index) => (
        <a href={post.url} class="group hover-lift" style={`animation-delay: ${index * 0.2}s`}>
          <div class="bg-white dark:bg-gray-800 rounded-xl overflow-hidden shadow-lg transition-all duration-300 hover:shadow-xl animate-fade-in">
            <div class="relative overflow-hidden">
              <img 
                src={post.image} 
                alt={post.title}
                class="w-full h-48 object-cover transform transition-transform duration-500 group-hover:scale-105"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors duration-300">
                {post.title}
              </h3>
              <p class="mt-2 text-gray-600 dark:text-gray-400">
                {post.excerpt}
              </p>
              <div class="mt-4 flex items-center text-primary-600 dark:text-primary-400">
                <span class="text-sm font-medium">Read more</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform transition-transform duration-300 group-hover:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
    
    <div class="mt-12 text-center animate-fade-in" style="animation-delay: 0.6s">
      <a 
        href="/blog" 
        class="inline-block bg-primary-600 hover:bg-primary-700 text-white font-semibold px-8 py-4 rounded-lg transition-all duration-300 hover:shadow-lg transform hover:-translate-y-1"
      >
        View All Articles
      </a>
    </div>
  </div>
</Layout>