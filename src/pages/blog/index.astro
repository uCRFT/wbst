---
import Layout from '../../layouts/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

const posts = [
  {
    title: 'Sustainable Mining Practices',
    excerpt: 'Exploring innovative approaches to responsible mineral extraction and sustainable mining operations.',
    image: '/images/mining.jpg',
    url: '/blog/sustainable-mining-practices',
    date: '2024-01-15'
  },
  {
    title: 'Water Resource Management',
    excerpt: 'Effective strategies for managing water resources in modern supply chains.',
    image: '/images/water.jpg',
    url: '/blog/water-resource-management',
    date: '2024-01-10'
  },
  {
    title: 'Renewable Energy in Supply Chains',
    excerpt: 'Integrating renewable energy solutions in natural resource operations.',
    image: '/images/renewable.jpg',
    url: '/blog/renewable-energy-supply-chains',
    date: '2024-01-05'
  },
  {
    title: 'Forest Conservation Strategies',
    excerpt: 'Implementing effective forest conservation practices in resource management.',
    image: '/images/forest.jpg',
    url: '/blog/forest-conservation-strategies',
    date: '2023-12-28'
  },
  {
    title: 'Circular Economy in Natural Resources',
    excerpt: 'Exploring the implementation of circular economy principles in resource management.',
    image: '/images/circular.jpg',
    url: '/blog/circular-economy-natural-resources',
    date: '2023-12-20'
  }
];

const breadcrumbs = [
  { text: 'Home', href: '/' },
  { text: 'Blog', href: '/blog' }
];
---

<Layout title="Blog">
  <Breadcrumbs items={breadcrumbs} />
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-8">Latest Articles</h1>
    
    <div class="grid gap-8">
      {posts.map(post => (
        <article class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg">
          <div class="md:flex">
            <div class="md:w-1/3">
              <img 
                src={post.image} 
                alt={post.title}
                class="w-full h-48 md:h-full object-cover"
              />
            </div>
            <div class="p-6 md:w-2/3">
              <time class="text-sm text-gray-500 dark:text-gray-400">{post.date}</time>
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white mt-2">
                <a href={post.url} class="hover:text-primary-600 dark:hover:text-primary-400">
                  {post.title}
                </a>
              </h2>
              <p class="mt-3 text-gray-600 dark:text-gray-400">
                {post.excerpt}
              </p>
              <a 
                href={post.url}
                class="inline-block mt-4 text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300"
              >
                Read more â†’
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>