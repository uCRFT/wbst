---
import Layout from '../layouts/Layout.astro';

const pages = [
  {
    title: 'Home',
    url: '/',
    description: 'Homepage of EcoSupply Insights'
  },
  {
    title: 'Blog',
    url: '/blog',
    description: 'Latest articles and insights',
    subpages: [
      {
        title: 'Sustainable Mining Practices',
        url: '/blog/sustainable-mining-practices',
      },
      {
        title: 'Water Resource Management',
        url: '/blog/water-resource-management',
      },
      {
        title: 'Renewable Energy in Supply Chains',
        url: '/blog/renewable-energy-supply-chains',
      },
      {
        title: 'Forest Conservation Strategies',
        url: '/blog/forest-conservation-strategies',
      },
      {
        title: 'Circular Economy in Natural Resources',
        url: '/blog/circular-economy-natural-resources',
      }
    ]
  },
  {
    title: 'Resources',
    url: '/resources',
    description: 'In-depth guides and resources',
    subpages: [
      {
        title: 'Supply Chain Optimization Guide',
        url: '/resources/supply-chain-optimization',
      },
      {
        title: 'Environmental Impact Assessment',
        url: '/resources/environmental-impact',
      },
      {
        title: 'Resource Management Best Practices',
        url: '/resources/management-best-practices',
      },
      {
        title: 'Sustainability Metrics Guide',
        url: '/resources/sustainability-metrics',
      },
      {
        title: 'Technology in Natural Resources',
        url: '/resources/technology-natural-resources',
      }
    ]
  }
];
---

<Layout title="Sitemap">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-8">Sitemap</h1>
    
    <div class="space-y-8">
      {pages.map(page => (
        <div class="border-b border-gray-200 dark:border-gray-800 pb-6">
          <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-2">
            <a href={page.url} class="hover:text-primary-600 dark:hover:text-primary-400">
              {page.title}
            </a>
          </h2>
          {page.description && (
            <p class="text-gray-600 dark:text-gray-400 mb-4">{page.description}</p>
          )}
          
          {page.subpages && (
            <ul class="space-y-2 ml-6">
              {page.subpages.map(subpage => (
                <li>
                  <a 
                    href={subpage.url}
                    class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400"
                  >
                    {subpage.title}
                  </a>
                </li>
              ))}
            </ul>
          )}
        </div>
      ))}
    </div>
  </div>
</Layout>