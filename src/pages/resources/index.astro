---
import Layout from '../../layouts/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

const resources = [
  {
    title: 'Supply Chain Optimization Guide',
    description: 'Comprehensive guide to optimizing natural resource supply chains.',
    image: '/images/supply-chain.jpg',
    url: '/resources/supply-chain-optimization'
  },
  {
    title: 'Environmental Impact Assessment',
    description: 'Understanding and measuring environmental impact in resource management.',
    image: '/images/environmental.jpg',
    url: '/resources/environmental-impact'
  },
  {
    title: 'Resource Management Best Practices',
    description: 'Best practices for sustainable resource management.',
    image: '/images/management.jpg',
    url: '/resources/management-best-practices'
  },
  {
    title: 'Sustainability Metrics Guide',
    description: 'Key metrics for measuring sustainability in natural resources.',
    image: '/images/metrics.jpg',
    url: '/resources/sustainability-metrics'
  },
  {
    title: 'Technology in Natural Resources',
    description: 'Emerging technologies in natural resource management.',
    image: '/images/technology.jpg',
    url: '/resources/technology-natural-resources'
  }
];

const breadcrumbs = [
  { text: 'Home', href: '/' },
  { text: 'Resources', href: '/resources' }
];
---

<Layout title="Resources">
  <Breadcrumbs items={breadcrumbs} />
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-8">Resource Guides</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {resources.map(resource => (
        <a href={resource.url} class="group">
          <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg">
            <img 
              src={resource.image} 
              alt={resource.title}
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400">
                {resource.title}
              </h2>
              <p class="mt-2 text-gray-600 dark:text-gray-400">
                {resource.description}
              </p>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>