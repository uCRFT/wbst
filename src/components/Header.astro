---
const navItems = [
  { href: '/', text: 'Home' },
  { href: '/blog', text: 'Blog' },
  { href: '/resources', text: 'Resources' },
];
---

<header class="bg-white dark:bg-gray-900 shadow-sm">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
    <a href="/" class="text-primary-600 dark:text-primary-400 font-bold text-xl">
      EcoSupply Insights
    </a>
    
    <div class="flex space-x-8">
      {navItems.map(item => (
        <a 
          href={item.href}
          class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400"
        >
          {item.text}
        </a>
      ))}
      <button id="theme-toggle" class="text-gray-700 dark:text-gray-300">
        <span class="dark:hidden">🌙</span>
        <span class="hidden dark:inline">☀️</span>
      </button>
    </div>
  </nav>
</header>

<script>
  const themeToggle = document.getElementById('theme-toggle');
  
  themeToggle?.addEventListener('click', () => {
    document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', document.documentElement.classList.contains('dark') ? 'dark' : 'light');
  });
</script>