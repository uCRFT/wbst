---
import Layout from '../layouts/Layout.astro';
import Breadcrumbs from './Breadcrumbs.astro';

interface Props {
  title: string;
  date: string;
  image: {
    src: string;
    alt: string;
  };
  breadcrumbs: Array<{
    text: string;
    href: string;
  }>;
}

const { title, date, image, breadcrumbs } = Astro.props;

const backgroundColor = 'bg-gray-100 dark:bg-gray-800';
const textColor = 'text-gray-900 dark:text-gray-100';
const hoverColor = 'hover:bg-gray-200 dark:hover:bg-gray-700';

<Layout title={title}>
  <Breadcrumbs items={breadcrumbs} />

  <div class={`max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 ${backgroundColor}`}>
    <img 
      src={image.src} 
      alt={image.alt}
      class="w-full h-64 object-cover rounded-lg mb-8"
    />
    
    <time class="text-sm text-gray-500 dark:text-gray-400">{date}</time>
    <h1 class={`text-4xl font-bold text-center ${textColor} mb-6 ${hoverColor}`}>
      <a href="#" class="hover:underline">{title}</a>
    </h1>
    
    <div class="prose prose-gray dark:prose-invert max-w-none text-gray-600 dark:text-gray-300">
      <slot />
    </div>
  </div>
</Layout>
---
